
@model PlayMusic.Models.BrowseCards
@{
    ViewBag.Title = "Home Page";
}

<div>

    <section>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators" style="margin-bottom:-10px;">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="slide-image" src="~/Content/Images/cover1.png" alt="">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/Content/Images/coverimage1.jpg" alt="">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/Content/Images/cover2.jpg" alt="">
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </section>

    <section class="search-sec">
        <div class="container">
            <form action="/Home/SearchResult" method="get" novalidate="novalidate">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <input id="search" name="search" type="text" class="form-control search-slt" placeholder="Enter ALbums Name">
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <input id="artistname" name="artistname" type="text" class="form-control search-slt" placeholder="Enter Artist Name">
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <select class="form-control search-slt" id="genreitem" name="genreitem">
                                    <option>Select Genre</option>

                                    @foreach (var Genre in Model.Genrelist)
                                    {
                                        <option>@Genre.Name</option>

                                    }


                                </select>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <button type="submit" class="btn btn-danger wrn-btn">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <h2 style="text-align:center"> YOUR FAVOURITE <b>MUSIC!</b>  </h2>

    @*<h5 style="margin-left:25px">Weekly musical highlights from our store.</h5>*@




    <div class="row" style="margin:15px">
        @foreach (var album in Model.Search_albums)
        {



            <div class="card" onclick="location.href='/Albums/AlbumDetails/@album.AlbumId';">
                <img src="@album.AlbumArtUrl">
                <div style="width:100%;height:80px;">
                    <h6>  <b>Artist :</b> @album.Artist.Name</h6>
                    @Html.ActionLink(@album.Title, "AlbumDetails", "Albums", new { id = @album.AlbumId }, new { area = "" })


                </div>



                <h5 class="pull-left" style="margin-right:15px"><b>@album.Price.ToString("c")</b></h5>
                <div class="pull-right" style="margin-top:7px">



                    @Html.ActionLink(" ", "AddToCart", "ShoppingCart", new { id = @album.AlbumId }, new { @class = "glyphicon glyphicon-shopping-cart" })


                </div>

            </div>


        }

    </div>


    <div>

    </div>
</div>