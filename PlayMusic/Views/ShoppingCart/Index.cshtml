@model PlayMusic.Models.ShoppingCartViewModel


<section style="margin-top:70px">

    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-8">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4 wish-list">

                    @foreach (var item in Model.CartItems)
                    {

                        <div style="width:100%;height:120px;display:flex;flex-direction:row;margin-bottom:10px">

                            <img style="width:120px;height:100%;" src=@item.Album.AlbumArtUrl>

                            <div style="width:100%;height:100%;padding:10px">

                                @Html.ActionLink(item.Album.Title, "Details", "Store", new { id = item.AlbumId }, null)
                                <h6>  <b>Artist : </b> @item.Album.Artist.Name </h6>
                                <h6>  <b>Quantity : </b>  @item.Count </h6>
                                <h5 class="pull-left" style="margin-right:15px"><b>@item.Album.Price.ToString("c")</b></h5>
                            </div>

                        </div>

                    }

                    <hr class="mb-4">

                    <p class="text-primary mb-0">
                        <i class="fas fa-info-circle mr-1"></i> Do not delay the purchase, adding
                        items to your cart does not mean booking them.
                    </p>

                </div>
            </div>
            <!-- Card -->
            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-4">Expected shipping delivery</h5>

                    <p class="mb-0"> Thu., 12.03. - Mon., 16.03.</p>
                </div>
            </div>
            <!-- Card -->
            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-4">We accept</h5>

                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                         alt="Visa">
                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                         alt="American Express">
                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                         alt="Mastercard">
                    <img class="mr-2" width="45px"
                         src="https://mdbootstrap.com/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.png"
                         alt="PayPal acceptance mark">
                </div>
            </div>
            <!-- Card -->

        </div>

        <script>

            function sum() {
                var value1 = parseInt(@Model.CartTotal);
                var value2 = 45;
                var sum = value1 + value2;
                document.getElementById("result").innerHTML = sum;
            }
        </script>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-lg-4">

            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">

                    <h5 class="mb-3">The total amount of</h5>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Temporary amount :
                            <span>$@Model.CartTotal</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            Shipping Rate :
                            <span> $45</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>The total amount of</strong>
                                <strong>
                                    <p class="mb-0">(including VAT)</p>
                                </strong>
                            </div>

                            <span><strong> @Model.FinalTotal  </strong></span>
                        </li>
                    </ul>
                    <div class="add-to-cart" onclick="location.href='/Checkout/AddressAndPayment' ;">
                        <p style="align-self:center;cursor:pointer;margin-top:2px"><b>Go To Checkout</b></p>
                    </div>
                </div>
            </div>
            <!-- Card -->
            <!-- Card -->
            <div class="mb-3">
                <div class="pt-4">



                    <div class="collapse" id="collapseExample">
                        <div class="mt-3">
                            <div class="md-form md-outline mb-0">
                                <input type="text" id="discount-code" class="form-control font-weight-light"
                                       placeholder="Enter discount code">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card -->

        </div>
        <!--Grid column-->

    </div>
    <!-- Grid row -->

</section>