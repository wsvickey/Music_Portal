@model PlayMusic.Models.Order

@{
    ViewBag.Title = "Address And Payment";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddressAndPayment", "Checkout", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div style="margin-top:65px;display:flex;flex-direction:row;padding-left:25px">
        <div style="width:50%;justify-content:center;">
            <div class="form-group" style="text-align:left">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="text-align:left">
                @Html.LabelFor(m => m.Phone, new { @class = "textalignleft col-md-2 " })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.City, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div style="width:50%">

            <div class="form-group">
                @Html.LabelFor(m => m.State, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PostalCode, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Country, new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p>We're running a promotion: all music is free with the promo code: "FREE"</p>

                @Html.Label("Promo Code", new { @class = "col-md-2 textalignleft" })
                <div class="col-md-10">
                    @Html.TextBox("PromoCode", null, new { @class = "form-control" })
                </div>
            </div>
            
        </div>
    </div>


 


    <div class="form-group" style="display: flex;
    justify-content: center;
    align-items: center;">
     
            <input type="submit" class="button" value="Submit Order" style="align-self:center" />
       
    </div>
}
